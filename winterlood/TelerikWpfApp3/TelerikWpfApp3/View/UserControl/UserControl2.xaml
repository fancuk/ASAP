<UserControl x:Class="TelerikWpfApp3.View.UserControl.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TelerikWpfApp3.View.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">

                <Label VerticalAlignment="Center">Name :</Label>

                <TextBox Text="{Binding Name}" VerticalAlignment="Center" Width="100" Height="30" Margin="10" />

            </StackPanel>



            <StackPanel Orientation="Horizontal" Margin="10">

                <Label VerticalAlignment="Center">First Name :</Label>

                <TextBox Text="{Binding FirstName}"  VerticalAlignment="Center" Width="100" Height="30" Margin="10" />

            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
